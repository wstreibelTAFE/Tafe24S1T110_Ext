<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Salmon">
		<Image Source="Images\abacus.PNG" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="100" Height="100"/>
		<TextBlock Text="Universal Calculator" FontWeight="Bold" Foreground="DarkBlue"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="54"/>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
			<Button Content="Math Calculator" FontSize="30" Width="400" Height="100" Margin="0,10,0,0"/>
			<Button Content="Mortgage Calculator" FontSize="30" Width="400" Height="100" Margin="0,10,0,0"/>
			<Button Content="Currency Calculator" FontSize="30" Width="400" Height="100" Margin="0,10,0,0"/>
			<Button Content="Exit" Width="400" FontSize="30" Height="100" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</Page>
